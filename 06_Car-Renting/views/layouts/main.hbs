<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>RentACar</title>
  <link rel="stylesheet" type="text/css" href="/css/style.css" />
  <link rel="icon" href="images/favicon.ico?" />
</head>
</body class="preload">
<header>
  <nav>
    <img id="logo" src="/images/logo.png" alt="logo" />
    <ul id="main-nav">
      <li>        <a href="/">home</a>      </li>
      <li>        <a href="/cars/all">all cars</a>      </li>
      <li>        <a href="/cars/create">add car</a>      </li>
      <li>        <a href="/users/profile/me">profile</a>      </li>
    </ul>
    <ul id="user">
      {{#if currentUser}}
      <li>{{currentUser.username}}</li>
      <li>
        <form id="logout-form" action="/users/logout" method="POST"></form>
        <a href="javascript:document.getElementById('logout-form').submit()">Logout</a>
      </li>
      {{else}}
      <li>        <a href="/users/register">Register</a>      </li>
      <li>        <a href="/users/login">Login</a>      </li>
      {{/if}}
    </ul>
  </nav>
</header>
<section id="main-container">
  <main>
    {{#if globalError}}
      <h3>{{globalError}}</h3>
    {{/if}}
    {{{body}}}
  </main>
</section>
<footer>
  <span>Authentication exercise</span>
</footer>
<script>
  document.onload = function () {
    document
      .querySelector('body')
      .classList
      .remove('preload');
  }
</script>
</body>

</html>