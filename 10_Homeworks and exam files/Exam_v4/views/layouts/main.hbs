<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Wiki</title>
    <link rel="stylesheet" href="/css/site.css">
</head>
</body class="preload">
<body>
    <div>
        <aside>
            <div class="center">
                <img class="logo" src="/img/logo.png" alt="logo">
            </div>

            <nav>
                <a href="/">Main Page</a>
                <a href="/latest-article">Latest Article</a>
                <a href="/all-articles">All Articles</a>
                <form action="/search" method="POST">
                    <input type="text" name="searchPattern">
                    <input type="submit" value="Search">
                </form>
                {{!-- {{#if currentUser}} --}}
                <a href="/create-article">Create New Article</a>
                {{!-- {{/if}} --}}
            </nav>
        </aside>
        <div id="container">
            <header>
                {{#if currentUser}}
                {{else}}
                <a href="/users/login">Login</a>
                <a href="/users/register">Register</a>
                {{/if}}
                {{#if currentUser}}
                <span>Welcome, {{currentUser.username}}!</span>
                <form id="logout-form" action="/users/logout" method="POST"></form>
                <a href="javascript:document.getElementById('logout-form').submit()">[Logout]</a>
                {{/if}}
            </header>
            <main>
                <h1>Welcome to SoftUni Wiki!</h1>
                {{#if globalError}}
                  <h3>{{globalError}}</h3>
                {{/if}}
                {{{body}}}
            </main>
            <footer>
                SoftUni Wiki &copy; 2018
            </footer>
            <script>
              document.onload = function () {
                document
                  .querySelector('body')
                  .classList
                  .remove('preload');
              }
            </script>
        </div>
    </div>
</body>

</html>