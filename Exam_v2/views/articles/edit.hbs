<section>
    <h2>Edit article
        <div class="controls">
            {{#if isAdmin}}
            <a href="/acrticles/lock?id={{mostRecentEdit.articleId}}">Lock article</a>
            <a href="/acrticles/unlock?id={{mostRecentEdit.articleId}}">Unlock article</a>
            {{/if}}
        </div>
    </h2>
    <div class="spacer">
        <form method="POST" action="/articles/edit?id={{mostRecentEdit.articleId}}">
            <label>Article title</label>
            <h3>{{articleTitle}}</h3>
            <label>Content</label>
            <textarea name="content">{{mostRecentEdit.content}}</textarea>
            <input type="submit" value="Submit">
        </form>
    </div>
</section>
{{#if status}}
<div id="succssesBox">
    <h2 id="succssesMsg">Article Edited</h2>
</div>
{{/if}}